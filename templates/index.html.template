    <h2>{{ stuff.year }} Stations</h2>

    {% for s, files in now.items() %}
      <h3>{{ s }} {{ stuff.stations[s].name }}</h3>
      {%- for f in files -%}
        <img src="{{ f }}">
      {%- endfor -%}
    {% endfor %}

